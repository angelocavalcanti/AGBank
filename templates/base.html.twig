<!DOCTYPE html>
<html class="bg-slate-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}AGBank{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>✅</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
         <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-white px-3">
        <div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center">
            <div class="text-2xl">
                <a href="{{ path('app_listar_agencias') }}">Início</a>
            </div>
            <div class="text-right">
                <div class="text-sm text-gray-500 dark:text-gray-400 flex">
                    {# VERIFICAÇÃO SE USUÁRIO ESTÁ AUTENTICADO NO SISTEMA: #}
                    {# {% if is_granted('IS_AUTHENTICATED_FULLY') %}   #}
                    <div class="ml-2 mr-2">
                        <a href="{{ path('app_criar_agencia') }}">Criar Agência</a>
                    </div> |
                    <div class="ml-2 mr-2">
                        {# <a href="{{ path('app_settings_profile') }}">Profile Settings</a> #}
                        <a href="{{ path('app_listar_agencias') }}">Profile Settings</a>
                    </div> |
                    <div class="ml-2 mr-2">
                        {# <a href="{{ path('app_logout') }}">Logout</a> #}
                        <a href="{{ path('app_criar_agencia') }}">Sair</a>
                    </div> |
                    {# {% else %} #}
                    <div class="ml-2 mr-2">
                        {# <a href="{{ path('app_login') }}">Login</a> #}
                        <a href="{{ path('app_listar_agencias') }}">Entrar</a>
                    </div> |
                    <div class="ml-2 mr-2">
                        <a href="{{ path('app_listar_agencias') }}">Criar Conta</a>
                    </div> |
                    {# {% endif %} #}
                </div>
            </div>
        </div>    
        <div class="w-full md:w-2/3 mx-auto">
            {% for message in app.flashes('success') %}
                <div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">{{ message }}</div>
            {% endfor %}
            {% block body %}{% endblock %}
        </div>        
    </body>
</html>
