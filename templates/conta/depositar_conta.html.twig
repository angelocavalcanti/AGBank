{% extends 'base.html.twig' %}

{% block title %}AGBank - Depositar{% endblock %}

{% block body %}
<div>
    <div class="w-full flex items-center align-middle">
        <div class="text-teal-700 text-2xl block w-full align-middle">Depositar</div>
    </div>
    <hr class="p-2 mt-2">    
    {{ form_start(formDeposito) }}
    <div>{{ form_errors(formDeposito) }}</div>
    
    <table class="w-1/3 justify-between items-center">
        <tr>
             <td>
                <div class="block text-sm text-gray-700 dark:text-gray-300 font-medium">AgÃªncia:</div>
                <div><input required class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2" type="text" name="agencia"/></div>
            </td>
            <td>
                <div class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Conta:</div>
                <div><input required class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2" type="text" name="conta"/></div>
            </td>
            <td>
                {{ form_label(formDeposito.valor, 'Valor: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formDeposito.valor, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2', onkeypress:"return (event.charCode >= 44 && event.charCode <= 57)"}}) }}
                {{ form_errors(formDeposito.valor) }}
            </td>
        </tr>
    </table>    
    <div>
        <button type="submit" class="block w-1/3 shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Depositar</button>
    </div>
    {{ form_end(formDeposito) }}
</div>
{% endblock %}
