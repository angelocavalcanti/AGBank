{% extends 'base.html.twig' %}

{% block title %}AGBank{% endblock %}

{% block body %}
<div class="">
    {% if contas %}
        {% for key, conta in contas %}
        <div class="text-teal-700 text-2xl block w-full align-middle py-2">Informações de Conta:</div>
        <div class="pt-2">
            <li><strong>Agência: </strong> {{ conta.agencia.codigo }} ({{ conta.agencia|default('--') }})</li>
            <li><strong>Número da Conta: </strong> {{ conta.numero|default('--') }} </li>
            <li><strong>Tipo: </strong> {{ conta.tipo.tipo|default('--') }} </li>
            <li><strong>Data de abertura: </strong> {{ conta.dataAbertura|date("d/m/Y") }} </li>
            {% if conta.saldo >= 0 %}
            <li><strong>Saldo: </strong>R$ {{ conta.saldo|number_format(2, ',', '.') }} </li>
            {% else %}
            <li><strong>Saldo: </strong><tag class="text-red-700">R$ {{ conta.saldo|number_format(2, ',', '.') }} 
            </tag></li>
            {% endif %}
        </div>
        <div>
            <button class="block w-1/3 shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2" onClick="window.location.href = '{{ path('app_listar_agencias') }}'">Voltar para página inicial</button>
        </div>
        {% endfor %}
    {% else %}
        <br>
        <h1>Não há conta!</h1>
        <h2>Retorne para a página inicial <a href= "{{ path('app_listar_agencias') }}">clicando aqui</a></h2>  
    {% endif %}
</div>
{% endblock %}
