{% extends 'base.html.twig' %}

{% block title %}AGBank - Nova Conta{% endblock %}

{% block body %}
<div>
    <div class="w-full items-center align-middle">
        <div class="text-teal-700 text-2xl block w-full align-middle">Solicitar abertura de conta</div>
    </div>
    <hr class="p-2 mt-2">
    <div class="text-teal-700 text-xl block w-full align-middle pb-3">Escolha a Agência e o tipo de conta que deseja solicitar</div>    
    {{ form_start(formConta) }}
    <div>{{ form_errors(formConta) }}</div>
    
    <table class="w-1/3 justify-between items-center">
        <tr>
            <td>
                {{ form_label(formConta.agencia, 'Agência: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formConta.agencia, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                {{ form_errors(formConta.agencia) }}
            </td>
            <td>
                {{ form_label(formConta.tipo, 'Tipo: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formConta.tipo, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                {{ form_errors(formConta.tipo) }}
            </td>
        </tr>
    </table>    
    <div>
        <button type="submit" class="block w-1/3 shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Solicitar</button>
    </div>
    {{ form_end(formConta) }}
    <div>
        <button class="block w-1/3 shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2" onClick="window.location.href = '{{ path('app_listar_agencias') }}'">Ver Agências</button>
    </div>
</div>
{% endblock %}
