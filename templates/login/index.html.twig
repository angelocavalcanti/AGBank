{% extends 'base.html.twig' %}

{% block title %}AGBank - Login{% endblock %}

{% block body %}
<div class="mt-4 mb-4 align-middle">
    <div class="text-teal-900 text-4xl">Bem vindo ao AGBank 
        <div class="text-3xl inline items-center">✅
        </div>
    </div>
</div>
<hr class="p-2 mt-2">
<div class="w-full flex items-center align-middle">
    <div class="text-teal-700 text-3xl block w-full pt-8 flex justify-center align-middle">Login</div>
</div>
<div class="w-full flex justify-center">
<div class="w-1/4 m-1/3 pt-2">
    <form action="{{ path('app_login') }}" method="POST">
        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Email:</label>
            <input 
                type="text"
                name="_username"
                value="{{ ultimoUsuario }}"
                class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-1 mt-1 mb-2" />
        </div>
        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium">Senha:</label>
            <input 
                type="password"
                name="_password"
                class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-1 mt-1 mb-2" />
        </div>
        <div>
            <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Entrar</button>
        </div>
    </form>
    <div class="mt-2 text-center text-gray-600 dark:text-gray-400">Não tem uma conta? 
        <div>
            <a class="text-teal-600" href="{{ path('app_registro') }}">Registre-se aqui</a>
            {# <button class="shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2" onClick="window.location.href = '{{ path('app_listar_agencias') }}'">Registre-se aqui</button> #}
        </div>
    </div>
</div>
</div>
{% endblock %}
