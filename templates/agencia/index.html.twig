{% extends 'base.html.twig' %}

{% block title %}AGBank{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Seja bem vindo ao AGBank</h1>{# ✅</h1> #}
    <h2>Veja nossas agências:</h2>
    <div>
        {% for key, agencia in agencias %}
            <li><a href="{{ path('app_agencia', {id:key}) }}">Agência {{agencia.nome}}</a></li>
        {% endfor %}
    </div>
</div>
{% endblock %}
