{% extends 'base.html.twig' %}

{% block title %}AGBank - Criar nova Agência{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="text-teal-700 text-2xl mb-5">Criação de nova Agência:<hr></div>
    
    {{ form_start(formAgencia) }}
     {{ form_start(formGerente) }}
    <div>{{ form_errors(formAgencia) }}</div>
    <div>{{ form_errors(formGerente) }}</div>
    
    <table class="w-full justify-between items-center">
    <tr>
        <th colspan="2">Informações da Agência</th>
    </tr>
    <tr>
        <td colspan="2">
            {{ form_label(formAgencia.nome, 'Nome:', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(formAgencia.nome, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2', 'placeholder':'Centro'}})}}
            {{ form_errors(formAgencia.nome) }}
        </td>
    </tr>
    <tr>
        <td>
            {{ form_label(formAgencia.codigo, 'Código: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(formAgencia.codigo, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2', 'placeholder':'123-4'}}) }}
            {{ form_errors(formAgencia.codigo) }}
        </td>
        <td>
            {{ form_label(formAgencia.telefone, 'Telefone: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(formAgencia.telefone, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2', 'placeholder':'DDD + Número'}}) }}
            {{ form_errors(formAgencia.telefone) }}
        </td>
    </tr>
    <tr>
        <td colspan="2">
            {{ form_label(formAgencia.endereco, 'Endereço: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(formAgencia.endereco, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2', 'placeholder':'Rua, n°, bairro, cidade/UF'}}) }}
            {{ form_errors(formAgencia.endereco) }}
        </td>
    </tr>
    </table>
    <br><div><hr></div><br>
    <table class="w-full justify-between items-center">
        <tr>
            <th colspan="2">Informações do Gerente</th>
        </tr>
        <tr>
            <td colspan="2">
                {{ form_label(formGerente.nome, 'Nome do Gerente: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formGerente.nome, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                {{ form_errors(formGerente.nome) }}
            </td>
        </tr>
        <tr>
            <td>
                {{ form_label(formGerente.cpf, 'CPF do Gerente: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formGerente.cpf, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                {{ form_errors(formGerente.cpf) }}
            </td>
            <td>
                {{ form_label(formGerente.matricula, 'Matrícula do Gerente: ', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
                {{ form_widget(formGerente.matricula, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
                {{ form_errors(formGerente.matricula) }}
            </td>
        </tr>
    </table>    
    <div>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2"><strong>Criar Agência e Gerente associado</strong></button>
    </div>
    {{ form_end(formAgencia) }}
    {{ form_end(formGerente) }}
    <br>
    {# <button onClick="window.location.href = '{{ path('app_listar_agencias') }}'"><strong>Lista de Agências</strong></button> #}
</div>
{% endblock %}
