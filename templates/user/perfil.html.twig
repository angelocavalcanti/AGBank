{% extends 'base.html.twig' %}

{% block title %}AGBank - Perfil de Usuário{% endblock %}

{% block body %}
<div class="">

        <div class="text-teal-700 text-2xl block w-full align-middle py-2">Informações de Usuário:</div><hr>
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-2 w-2/3 gap-x-6">
            <div class="mt-5 mb-3 px-2 pt-2 rounded-md bg-gray-200 dark:bg-gray-700">
                <li><strong>Nome: </strong> {{ usuario.nome }}</li>
                <li><strong>CPF: </strong> {{ usuario.cpf }} </li>
                <li><strong>Telefone: </strong> {{ usuario.telefone }} </li>
                <li><strong>Email: </strong> {{ usuario.email }} </li>
                {% if usuario.conta %}
                    <li><strong><a href= "{{ path('app_listar_contas') }}">Ver minha(s) conta(s)</a></strong></li>
                {% endif %}
                <div class="pb-1">
                    <button class="block w-1/3 shadow-sm border-transparent bg-red-500 hover:bg-red-600 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2" onClick="window.location.href = '{{ path('app_excluir_usuario', {id:usuario.id }) }}'">Excluir Cadastro</button>
                </div>
            </div>
        </div>
</div>
{% endblock %}
